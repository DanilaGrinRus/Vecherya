{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.invalid/schemas/mapping.schema.json",
  "title": "Card image mapping schema",
  "type": "object",
  "additionalProperties": {
    "$ref": "#/$defs/MappingEntry"
  },
  "propertyNames": {
    "type": "string",
    "minLength": 1,
    "maxLength": 64,
    "pattern": "^[a-z0-9][a-z0-9_-]*[a-z0-9]$|^[a-z0-9]$"
  },
  "allOf": [
    {
      "not": {
        "anyOf": [
          {
            "required": [
              "files"
            ]
          },
          {
            "required": [
              "output_dir"
            ]
          },
          {
            "required": [
              "source_dir"
            ]
          }
        ]
      }
    }
  ],
  "$defs": {
    "FilePath": {
      "type": "string",
      "minLength": 5,
      "maxLength": 160,
      "pattern": "^[^\\\\]+\\.(webp|png|jpg|jpeg)$"
    },
    "MappingEntry": {
      "anyOf": [
        {
          "$ref": "#/$defs/FilePath"
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "l"
          ],
          "properties": {
            "s": {
              "$ref": "#/$defs/FilePath"
            },
            "l": {
              "$ref": "#/$defs/FilePath"
            }
          }
        }
      ]
    }
  }
}